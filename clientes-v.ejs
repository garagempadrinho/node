<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Clientes</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>ğŸ‘¥ Lista de Clientes</h1>
  <nav>
    <a href="/">ğŸš— Carros</a> | 
    <a href="/clientes">ğŸ‘¥ Clientes</a> | 
    <a href="/vendas">ğŸ’° Vendas</a>
  </nav>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Carro</th>
      </tr>
    </thead>
    <tbody>
      <% clientes.forEach(c => { %>
        <tr>
          <td><%= c.id_cliente %></td>
          <td><%= c.nome %></td>
          <td><%= c.telefone %></td>
          <td><%= c.modelo %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <h2>Adicionar Cliente</h2>
<form action="/clientes/add" method="POST">
  <label>Nome:</label>
  <input type="text" name="nome" required>

  <label>Telefone:</label>
  <input type="text" name="telefone" required>

  <label>Carro:</label>
  <select name="id_carro" required>
    <% carros.forEach(carro => { %>
      <option value="<%= carro.id_carro %>"><%= carro.modelo %></option>
    <% }) %>
  </select>
  

  <button type="submit">Adicionar Cliente</button>
</form>

</body>
</html>
